<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.navigation.GoogleNavigation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <TextView
            android:id="@+id/message"
            android:background="#99ffffff"
            android:text=""
            android:padding="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/destinationView"
            map:srcCompat="@drawable/ic_destination"
            android:alpha="0"
            android:scaleType="fitStart"
            android:layout_height="100dp"
            android:layout_width="50dp"
            />

        <TextView
            android:id="@+id/request"
            android:gravity="top|center_horizontal"
            android:paddingTop="32dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_route_summary"
            android:layout_marginBottom="-100dp"
            android:elevation="14dp"
            android:background="@drawable/letsgo_btn_bg"
            android:textColor="@color/white"
            android:text="بزن بریم!"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:textColor="@color/dark_gray"
            android:alpha="0.7"
            android:layout_alignParentLeft="true"
            android:text="© AvinTech"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</FrameLayout>